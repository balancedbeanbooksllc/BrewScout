<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrewScout.Views.EventDetailPage"
             Title="Event">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="10">
      <Label x:Name="TitleLabel" FontSize="20" FontAttributes="Bold" />
      <Label x:Name="TimeLabel" />
      <Label x:Name="VenueLabel" />
      <Label x:Name="CityLabel" />
      <Label x:Name="DescLabel" />
      <Button Text="Open in Maps" Clicked="OpenMaps_Clicked" />
      <Button Text="Add to Calendar (.ics)" Clicked="ExportIcs_Clicked" />
      <Button x:Name="InfoBtn" Text="Open Info Page" IsVisible="False" Clicked="OpenInfo_Clicked" />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
