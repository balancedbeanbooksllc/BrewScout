<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrewScout.Views.BreweryListPage"
             Title="Breweries">
  <VerticalStackLayout Padding="16">
    <SearchBar x:Name="Search" Placeholder="Search by name or city" />
    <CollectionView x:Name="List" SelectionMode="None">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Frame Padding="12" Margin="0,6" HasShadow="True">
            <VerticalStackLayout>
              <Label Text="{Binding Name}" FontAttributes="Bold"/>
              <Label Text="{Binding City}" FontSize="12"/>
            </VerticalStackLayout>
          </Frame>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>
